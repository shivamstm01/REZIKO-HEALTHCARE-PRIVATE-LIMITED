datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Decimal
  type        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Job {
  id          String   @id @default(uuid())
  title       String
  location    String
  type        String
  description String
  createdAt   DateTime @default(now())
  applications JobApplication[]
}

model JobApplication {
  id        String   @id @default(uuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  name      String
  email     String
  resumeUrl String?
  phone     String
  appliedAt DateTime @default(now())
}

model AdminUser {
  id       String @id @default(uuid())
  email    String @unique
  password String
}
